{
  "name": "mixml",
  "version": "0.0.1",
  "description": "A markup language for representing  media performances such as dj mixes or video mixes.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#src/*": "./src/*"
  },
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap --outDir dist",
    "format": "prettier --write .",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djMax/mixml.git"
  },
  "keywords": [
    "media",
    "markup",
    "dj",
    "language"
  ],
  "author": "Max Metral",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/djMax/mixml/issues"
  },
  "homepage": "https://github.com/djMax/mixml#readme",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/fluent-ffmpeg": "^2",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "fluent-ffmpeg": "^2.1.3",
    "smol-toml": "^1.3.1"
  },
  "packageManager": "yarn@4.6.0"
}
